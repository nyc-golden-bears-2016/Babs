<!DOCTYPE html>
<html>
  <head>
    <title>MessageInABottle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Cantarell:400i" rel="stylesheet">

    <div class="container">
      <div class="nav">
        <a href="/">Home</a>
        <% if user_signed_in? %>
          <a href="/users/sign_out">Logout</a>
          <a id="user-greeting" href="/static/index">Welcome, <%= current_user.username.capitalize %></a>
        <% else %>
          <a href="/users/sign_in">Login</a>
          <a href="/users/sign_up">Sign Up</a>
        <% end %>
        <img class="logo" src="<%= image_path('logo.png' ) %>">

      </div>
    </div>

    </head>

    <body>
      <%= yield %>
    </body>
  </div>
</html>
