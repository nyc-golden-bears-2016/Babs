<%= video_tag "video.webm", id:"video-background", autoplay: true, loop: true, muted: true %>
<div class="user-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :login %><br />
      <%= f.text_field :login%>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %><br />
       <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    </div>
     <% end -%>


    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>
